#!/bin/bash

# Install script for clapp
install() {
  local repo="$(find "$HOME" -type d -name clapp 2>/dev/null | head -1)"
  cp -f "$repo"/clapp "$HOME"/bin/clapp || return
  [[ ! -e "$HOME"/.clapp ]] && mkdir "$HOME"/.clapp
  cp -f "$repo"/.clapp/.lib "$HOME"/.clapp/.lib || return
  [[ ! -e "$HOME"/.clapp/.cfg ]] && ( cp -f "$repo"/.clapp/.cfg "$HOME"/.clapp/.cfg || return )
  cp -f "$repo"/.clapp/help "$HOME"/.clapp/help || return
  cp -f "$repo"/.clapp/version "$HOME"/.clapp/version || return
  cp -f -r "$repo"/.clapp/assets "$HOME"/.clapp/ || return
  cp -f -r "$repo"/.clapp/docs "$HOME"/.clapp/ || return
}

install