#!/bin/bash

# Install script for clapp
install() {
  local repo="$(find "$HOME" -type d -name clapp 2>devnull | head -1)"
  cp -f "$repo"/clapp "$HOME"/bin/clapp || return
  cp -f "$repo"/.clapp/.lib "$HOME"/.clapp/.lib || return
  cp -f "$repo"/.clapp/help "$HOME"/.clapp/help || return
  cp -f "$repo"/.clapp/version "$HOME"/.clapp/version || return
  cp -f -r "$repo"/.clapp/assets "$HOME"/.clapp/assets || return
  cp -f -r "$repo"/.clapp/docs "$HOME"/.clapp/docs || return
}

install